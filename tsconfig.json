{
	"compilerOptions": {
		"baseUrl": ".",

		"declaration": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2022",
		"moduleResolution": "node",
		"module": "Node16",
		"allowSyntheticDefaultImports": true,

		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		],

		"paths": {
			"@cypher-swift/lib": ["packages/lib/src"],
			"@cypher-swift/lib/*": ["packages/lib/src/*"],
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"typings"
	]
}
